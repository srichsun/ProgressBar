<div class="container">
  <div class="row">
      <div class="col-xs-3">
        <%= render 'products/components/side_bar', categories: @categories %>
      </div>

      <div class="col-xs-9">
        <div class="row">
          <div class="col-xs-12">
            <div class="jumbotron">
              <h1><%= @ad[:title] %></h1>
              <p><%= @ad[:description] %></p>
              <p><a class="btn btn-primary btn-lg" href="#" role="button"><%= @ad[:action_title] %></a></p>
            </div>
          </div>
        </div>
        <div class="row">
          <% @products.each do |product| %>
            <div class="col-xs-3">
              <%= render 'products/card/item', product: product %>
              <%#= render partial: 'products/card/item', locals: { product: product } 另一種寫法 %>
            </div>
          <% end %>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <%= render 'products/components/pagination', current_page_number: @current_page_number,
                                                         first_page_number: @first_page_number,
                                                         last_page_number: @last_page_number
            %>
          </div>
        </div>
      </div>
  </div>
</div>

<h3>新增產品</h3>
<%= form_for @product, method: :post  do |f| %>
  <%= f.label :name, "名稱" %>
  <%= f.text_field :name %><br>

  <%= f.label :price, "價錢" %>
  <%= f.number_field :price %><br>

  <%= f.label :description, "描述" %>
  <%= f.text_field :description %><br>

  <%= f.label :image_url, "圖片" %>
  <%= f.text_field :image_url %><br>

  <%= f.submit "更新" %>
<% end %>

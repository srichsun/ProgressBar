<div class="container">
  <div class="row">
      <div class="col-xs-3">
        <% @categories.each do |category|  %>
          <ul class="list-group">
            <li class="list-group-item">
              <%= category.name %>
              <ul class="list-group">
                <% category.subcategories.each do | subcatwgory | %>
                  <li class="list-group-item"><%= subcatwgory.name %></li>
                <% end %>
              </ul>
            </li>
          </ul>
        <% end %>
      </div>

      <div class="col-xs-9">
        <div class="row">
          <div class="col-xs-12">
            <div class="jumbotron">
              <h1><%= @ad[:title] %></h1>
              <p><%= @ad[:description] %></p>
              <p><a class="btn btn-primary btn-lg" href="#" role="button"><%= @ad[:action_title] %></a></p>
            </div>
          </div>
        </div>
        <div class="row">
          <% @products.each do |product| %>
            <div class="col-xs-3">
              <%= render 'products/card/item', product: product %>
              <%#= render partial: 'products/card/item', locals: { product: product } 另一種寫法 %>
            </div>
          <% end %>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <nav aria-label="Page navigation">
              <ul class="pagination">
                <% if @current_page_number > @first_page_number %>
                  <li>
                    <%= link_to '<span aria-hidden="true">&laquo;</span>'.html_safe,
                    root_path(current_page: (@current_page_number-1)), 'aria-label': "Previous" %>
                  </li>
                <% end %>
                <% (@first_page_number..@last_page_number).each do |page_number| %>
                  <li><%= link_to "#{page_number}", root_path(current_page: page_number) %></li>
                <% end%>
                <% if @current_page_number < @last_page_number %>
                  <li>
                    <%= link_to '<span aria-hidden="true">&raquo;</span>'.html_safe,
                    root_path(current_page: (@current_page_number+1)), 'aria-label': "Previous" %>
                  </li>
                <% end %>
              </ul>
            </nav>
          </div>
        </div>
      </div>
  </div>
</div>

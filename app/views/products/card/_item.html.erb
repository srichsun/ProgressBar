<div class="thumbnail">
  <%= image_tag product.image_url %>
  <div class="caption">
    <h3><%= product.id  %> <%=  product.name %> </h3>
    <p><%= product.description %></p>

    <div>
      <a href="#" class="btn btn-default" role="button">Button</a>
      <%= link_to "edit", edit_product_path(product),class: 'btn btn-primary' %>
    </div>
  </div>
</div>
